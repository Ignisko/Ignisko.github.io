---
// src/layouts/Layout.astro
// this component provides the basic html structure for all pages.

// define the properties (props) this layout component accepts
// this allows pages using the layout to pass in data like title and description
export interface Props {
	title?: string; // page title (optional, has default)
	description?: string; // page description (optional, has default)
}

// get the props passed from the page. provide default values if a page doesn't send them.
const {
	title = "Iggy Spolski", // default title if none is provided by the page
	description = "personal website and blog of iggy spolski." // default description
} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		{/* the original svg favicon link is commented out; browser should find /favicon.ico */}
		{/* astro generator tag (standard) */}
		<meta name="generator" content={Astro.generator} />

		{/* use the dynamic title from props (or the default) */}
		<title>{title}</title>

		{/* use the dynamic description from props (or the default) */}
		<meta name="description" content={description} />

		{/* you could link external fonts or CSS files here if needed later */}

	</head>
	<body>
		{/* the <slot /> is where the content from your page files (like index.astro) */}
		{/* will be injected into the layout. */}
		<slot />
	</body>
</html>

{/* global styles apply to the whole document. use sparingly. */}
<style is:global>
	/* apply a more modern box sizing model */
	html {
		box-sizing: border-box;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; /* basic modern font stack */
		background-color: #fefefe; /* optional: slight off-white bg */
	}
	*, *:before, *:after {
		box-sizing: inherit; /* better box model */
	}

	/* remove default browser margin from the body */
	body {
		margin: 0;
		/* consider setting text color and line height here if desired globally */
		/* color: #333; */
		/* line-height: 1.5; */
	}

	/* basic responsive image handling (optional) */
	img, picture, video, canvas, svg {
  		display: block;
  		max-width: 100%;
	}

</style>