---
// src/pages/index.astro

// import the main layout component which wraps the page content
// with html, head, body tags, common structure, etc.
import Layout from '../layouts/Layout.astro';

// define variables in the frontmatter for easier content management below.
// this is optional but helps keep content separate from markup.
const siteTitle = "Iggy Spolski"; // used for the page <title> tag, passed to the Layout component.
const pageHeading = "Welcome!";
const introText = "this is my new personal website and future blog, built with Astro.";
const comingSoonText = "stay tuned for updates and posts!";
---

{/* wrap page content in the Layout component */}
{/* pass the siteTitle prop to the layout, likely used to set the html <title> tag */}
<Layout title={siteTitle}>
  {/* use the <main> tag for the primary content area of the page */}
  <main>
    <h1>{pageHeading}</h1>

    <p>{introText}</p>

    <p>{comingSoonText}</p>

    {/* add more html content here as needed */}
    {/* for example, a link: */}
    {/* <p>find my projects on <a href="https://github.com/Ignisko">github</a>.</p> */}

  </main>

  {/* scoped css: styles defined here only apply to this page/component. */}
  {/* this is optional; styling could also come from the layout or global css. */}
  <style>
    main {
      margin: auto; /* center the main content block on the page */
      padding: 1rem 1.5rem; /* add space inside the main content block */
      max-width: 70ch; /* set a max width for comfortable reading line length */
      font-family: sans-serif; /* apply a standard sans-serif font */
      line-height: 1.6; /* set spacing between lines of text */
    }
    h1 {
      font-size: 2.5rem; /* style the main heading */
      font-weight: bold;
      margin-bottom: 1em; /* add space below the main heading */
    }
    p {
      margin-bottom: 1em; /* add space below paragraphs */
    }
    /* add more specific styles here if needed */
  </style>
</Layout>